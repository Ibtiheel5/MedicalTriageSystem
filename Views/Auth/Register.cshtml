@model MedicalTriageSystem.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Créer un compte - Système Triage Médical";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-gradient-primary text-white py-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-white rounded-circle p-3 me-3">
                            <i class="bi bi-heart-pulse fs-4 text-primary"></i>
                        </div>
                        <div>
                            <h2 class="h4 mb-0">Créer votre compte médical</h2>
                            <p class="mb-0 opacity-75">Accédez à nos services de triage en ligne</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger">
                            <h6 class="alert-heading">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                Veuillez corriger les erreurs suivantes :
                            </h6>
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form method="post" asp-action="Register" asp-controller="Auth" id="registerForm">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <!-- Informations personnelles -->
                            <div class="col-md-6">
                                <h5 class="mb-4 border-bottom pb-2">
                                    <i class="bi bi-person-vcard me-2"></i>
                                    Informations personnelles
                                </h5>

                                <div class="mb-3">
                                    <label asp-for="FullName" class="form-label fw-semibold">
                                        <i class="bi bi-person me-1"></i>
                                        Nom complet *
                                    </label>
                                    <input asp-for="FullName" class="form-control form-control-lg"
                                           placeholder="Ex: Jean Dupont" required>
                                    <span asp-validation-for="FullName" class="text-danger small"></span>
                                    <div class="form-text">Votre nom complet tel qu'il apparaîtra sur vos documents médicaux</div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label fw-semibold">
                                        <i class="bi bi-envelope me-1"></i>
                                        Adresse email *
                                    </label>
                                    <input asp-for="Email" type="email" class="form-control form-control-lg"
                                           placeholder="votre@email.com" required>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                    <div class="form-text">Utilisée pour la communication médicale</div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Phone" class="form-label fw-semibold">
                                        <i class="bi bi-telephone me-1"></i>
                                        Téléphone *
                                    </label>
                                    <input asp-for="Phone" class="form-control form-control-lg"
                                           placeholder="06 12 34 56 78" required>
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Identifiants -->
                            <div class="col-md-6">
                                <h5 class="mb-4 border-bottom pb-2">
                                    <i class="bi bi-shield-lock me-2"></i>
                                    Identifiants de connexion
                                </h5>

                                <div class="mb-3">
                                    <label asp-for="Username" class="form-label fw-semibold">
                                        <i class="bi bi-person-badge me-1"></i>
                                        Nom d'utilisateur *
                                    </label>
                                    <input asp-for="Username" class="form-control form-control-lg"
                                           placeholder="Choisissez un identifiant" required>
                                    <span asp-validation-for="Username" class="text-danger small"></span>
                                    <div class="form-text">Utilisé pour vous connecter</div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label fw-semibold">
                                        <i class="bi bi-key me-1"></i>
                                        Mot de passe *
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="Password" type="password" class="form-control form-control-lg"
                                               id="password" placeholder="Minimum 8 caractères" required>
                                        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('password')">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                    <div class="password-strength mt-2">
                                        <div class="progress" style="height: 4px;">
                                            <div class="progress-bar" id="passwordStrength" role="progressbar" style="width: 0%"></div>
                                        </div>
                                        <small class="text-muted" id="passwordHint">Force du mot de passe</small>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                                        <i class="bi bi-key-fill me-1"></i>
                                        Confirmer le mot de passe *
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg"
                                               id="confirmPassword" placeholder="Retapez votre mot de passe" required>
                                        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('confirmPassword')">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                    <div class="form-check mt-2">
                                        <input class="form-check-input" type="checkbox" id="showPasswordMatch">
                                        <label class="form-check-label small" for="showPasswordMatch">
                                            Afficher la correspondance des mots de passe
                                        </label>
                                    </div>
                                </div>

                                <!-- Type de compte -->
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">
                                        <i class="bi bi-person-rolodex me-1"></i>
                                        Type de compte *
                                    </label>
                                    <div class="row g-3">
                                        <div class="col-12">
                                            <div class="form-check card border p-3" onclick="selectRole('Patient')">
                                                <input class="form-check-input" type="radio" asp-for="Role"
                                                       value="Patient" id="rolePatient" checked>
                                                <label class="form-check-label fw-semibold" for="rolePatient">
                                                    <i class="bi bi-person me-2 text-primary"></i>
                                                    Patient
                                                </label>
                                                <p class="mb-0 text-muted small mt-2">
                                                    Pour bénéficier de nos services de triage médical et suivre votre santé
                                                </p>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-check card border p-3" onclick="selectRole('Doctor')">
                                                <input class="form-check-input" type="radio" asp-for="Role"
                                                       value="Doctor" id="roleDoctor">
                                                <label class="form-check-label fw-semibold" for="roleDoctor">
                                                    <i class="bi bi-person-badge me-2 text-info"></i>
                                                    Professionnel de santé
                                                </label>
                                                <p class="mb-0 text-muted small mt-2">
                                                    Pour les médecins, infirmiers et professionnels de santé
                                                    <span class="d-block text-warning mt-1">
                                                        <i class="bi bi-info-circle"></i> Un code d'accès professionnel sera demandé
                                                    </span>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Role" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Accord juridique -->
                        <div class="card border mb-4">
                            <div class="card-body">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="terms" required>
                                    <label class="form-check-label" for="terms">
                                        En créant mon compte, je reconnais avoir lu et accepté les
                                        <a href="#" class="text-decoration-none" data-bs-toggle="modal" data-bs-target="#termsModal">
                                            conditions générales d'utilisation
                                        </a>
                                        et la
                                        <a href="#" class="text-decoration-none" data-bs-toggle="modal" data-bs-target="#privacyModal">
                                            politique de confidentialité
                                        </a>
                                        du Système Triage Médical. *
                                    </label>
                                </div>
                                <div class="form-check mt-2">
                                    <input class="form-check-input" type="checkbox" id="medicalConsent" required>
                                    <label class="form-check-label" for="medicalConsent">
                                        Je consens au traitement de mes données médicales dans le cadre de ma prise en charge. *
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-primary btn-lg py-3" id="submitBtn">
                                <i class="bi bi-person-plus me-2"></i>
                                <span id="submitText">Créer mon compte médical</span>
                                <span class="spinner-border spinner-border-sm ms-2 d-none" id="submitSpinner"></span>
                            </button>

                            <div class="text-center">
                                <p class="mb-2">Déjà un compte ?</p>
                                <a asp-action="Login" asp-controller="Auth" class="btn btn-outline-primary">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>
                                    Se connecter
                                </a>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="card-footer bg-light border-0 py-3">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <small class="text-muted">
                                <i class="bi bi-shield-check me-1"></i>
                                Données sécurisées et cryptées conformément au RGPD
                            </small>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <small class="text-muted">
                                <i class="bi bi-phone me-1"></i>
                                Support : 01 23 45 67 89
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Conditions -->
<div class="modal fade" id="termsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Conditions d'utilisation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Contenu des conditions -->
                <h6>1. Acceptation des conditions</h6>
                <p>En utilisant le Système Triage Médical, vous acceptez ces conditions.</p>

                <h6>2. Service médical</h6>
                <p>Ce service complète mais ne remplace pas une consultation médicale.</p>

                <h6>3. Confidentialité</h6>
                <p>Vos données sont protégées par le secret médical.</p>

                <h6>4. Responsabilité</h6>
                <p>En cas d'urgence, composez immédiatement le 15 ou le 112.</p>
            </div>
        </div>
    </div>
</div>

<!-- Modal Confidentialité -->
<div class="modal fade" id="privacyModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Politique de confidentialité</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <h6>1. Données collectées</h6>
                <p>Nous collectons uniquement les données nécessaires à votre prise en charge médicale.</p>

                <h6>2. Utilisation des données</h6>
                <p>Vos données sont utilisées uniquement dans le cadre médical.</p>

                <h6>3. Protection</h6>
                <p>Toutes les données sont cryptées et stockées en France.</p>

                <h6>4. Vos droits</h6>
                <p>Vous pouvez accéder, modifier ou supprimer vos données à tout moment.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Fonctions utilitaires
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = input.parentElement.querySelector('i');

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }

        function selectRole(role) {
            const radio = document.getElementById(`role${role}`);
            if (radio) {
                radio.checked = true;
                radio.dispatchEvent(new Event('change'));
            }
        }

        // Validation en temps réel
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('registerForm');
            const passwordInput = document.getElementById('password');
            const confirmInput = document.getElementById('confirmPassword');
            const passwordStrength = document.getElementById('passwordStrength');
            const passwordHint = document.getElementById('passwordHint');
            const showMatchCheckbox = document.getElementById('showPasswordMatch');
            const submitBtn = document.getElementById('submitBtn');
            const submitText = document.getElementById('submitText');
            const submitSpinner = document.getElementById('submitSpinner');

            // Force du mot de passe
            if (passwordInput) {
                passwordInput.addEventListener('input', function() {
                    const password = this.value;
                    let strength = 0;
                    let hint = '';
                    let color = 'danger';

                    if (password.length >= 8) strength += 25;
                    if (/[A-Z]/.test(password)) strength += 25;
                    if (/[0-9]/.test(password)) strength += 25;
                    if (/[^A-Za-z0-9]/.test(password)) strength += 25;

                    if (strength === 0) {
                        hint = 'Très faible';
                        color = 'danger';
                    } else if (strength <= 25) {
                        hint = 'Faible';
                        color = 'warning';
                    } else if (strength <= 50) {
                        hint = 'Moyen';
                        color = 'info';
                    } else if (strength <= 75) {
                        hint = 'Bon';
                        color = 'primary';
                    } else {
                        hint = 'Très fort';
                        color = 'success';
                    }

                    passwordStrength.style.width = `${strength}%`;
                    passwordStrength.className = `progress-bar bg-${color}`;
                    passwordHint.textContent = `Force: ${hint}`;
                    passwordHint.className = `text-${color}`;
                });
            }

            // Vérification de correspondance
            if (confirmInput && passwordInput) {
                const checkPasswords = () => {
                    const password = passwordInput.value;
                    const confirm = confirmInput.value;

                    if (showMatchCheckbox?.checked) {
                        if (confirm && password !== confirm) {
                            confirmInput.classList.add('is-invalid');
                            confirmInput.classList.remove('is-valid');
                        } else if (confirm && password === confirm) {
                            confirmInput.classList.remove('is-invalid');
                            confirmInput.classList.add('is-valid');
                        } else {
                            confirmInput.classList.remove('is-invalid', 'is-valid');
                        }
                    }
                };

                passwordInput.addEventListener('input', checkPasswords);
                confirmInput.addEventListener('input', checkPasswords);

                if (showMatchCheckbox) {
                    showMatchCheckbox.addEventListener('change', function() {
                        if (this.checked) {
                            checkPasswords();
                        } else {
                            confirmInput.classList.remove('is-invalid', 'is-valid');
                        }
                    });
                }
            }

            // Gestion de la soumission
            if (form) {
                form.addEventListener('submit', function(e) {
                    // Validation des cases à cocher
                    const terms = document.getElementById('terms');
                    const medicalConsent = document.getElementById('medicalConsent');

                    if (!terms.checked || !medicalConsent.checked) {
                        e.preventDefault();
                        alert('Veuillez accepter les conditions et le consentement médical.');
                        return;
                    }

                    // Validation des mots de passe
                    if (passwordInput.value !== confirmInput.value) {
                        e.preventDefault();
                        alert('Les mots de passe ne correspondent pas.');
                        confirmInput.focus();
                        return;
                    }

                    // Afficher le spinner
                    if (submitBtn && submitText && submitSpinner) {
                        submitBtn.disabled = true;
                        submitText.textContent = 'Création en cours...';
                        submitSpinner.classList.remove('d-none');
                    }
                });
            }

            // Auto-sélection du rôle patient
            selectRole('Patient');

            // Focus sur le premier champ
            const firstInput = document.querySelector('input[required]');
            if (firstInput) {
                firstInput.focus();
            }
        });
    </script>

    <style>
        .card {
            border-radius: 16px;
        }

        .card-header {
            border-radius: 16px 16px 0 0 !important;
        }

        .bg-gradient-primary {
            background: linear-gradient(135deg, #4361ee, #3a0ca3);
        }

        .form-control-lg {
            padding: 1rem 1.25rem;
            font-size: 1.1rem;
        }

        .form-check.card {
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

            .form-check.card:hover {
                transform: translateY(-2px);
                border-color: #4361ee;
                box-shadow: 0 5px 15px rgba(67, 97, 238, 0.1);
            }

        .form-check-input:checked + label {
            color: #4361ee;
        }

        .form-check.card .form-check-input:checked ~ * {
            color: #4361ee;
        }

        .btn-primary {
            background: linear-gradient(135deg, #4361ee, #3a0ca3);
            border: none;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(67, 97, 238, 0.3);
            }

        .password-strength .progress {
            background-color: #e9ecef;
        }

        .is-valid {
            border-color: #198754 !important;
        }

        .is-invalid {
            border-color: #dc3545 !important;
        }

        .form-label i {
            width: 20px;
        }
    </style>
}