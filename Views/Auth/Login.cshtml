@{
    ViewData["Title"] = "Connexion - Medical Triage System";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="mb-0">
                        <i class="fas fa-heartbeat me-2"></i>Medical Triage System
                    </h2>
                    <p class="mb-0 mt-2">Accès sécurisé à votre espace médical</p>
                </div>

                <div class="card-body p-5">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <h3 class="text-center mb-4">Connexion</h3>

                    <form method="post" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="username" class="form-label">
                                <i class="fas fa-user me-1"></i>Nom d'utilisateur ou Email
                            </label>
                            <input type="text" class="form-control form-control-lg" id="username" name="username"
                                   placeholder="Entrez votre nom d'utilisateur ou email" required>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">
                                <i class="fas fa-lock me-1"></i>Mot de passe
                            </label>
                            <div class="input-group">
                                <input type="password" class="form-control form-control-lg" id="password"
                                       name="password" placeholder="Entrez votre mot de passe" required>
                                <button type="button" class="btn btn-outline-secondary"
                                        onclick="togglePassword('password')">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                            </button>
                        </div>

                        @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                        {
                            <div class="alert alert-danger">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <span>@error.ErrorMessage</span>
                            
                                    <br />
                                }
                            </div>
                        }
                    </form>

                    <div class="text-center mt-4">
                        <p class="mb-2">
                            <a href="@Url.Action("ForgotPassword")" class="text-decoration-none">
                                <i class="fas fa-key me-1"></i>Mot de passe oublié ?
                            </a>
                        </p>
                        <hr class="my-4">
                        <p class="mb-3">Vous n'avez pas de compte ?</p>
                        <a href="@Url.Action("Register")" class="btn btn-outline-success btn-lg w-100">
                            <i class="fas fa-user-plus me-2"></i>Créer un compte
                        </a>
                    </div>

                    <!-- Accès rapide pour les démos -->
                    <div class="mt-4">
                        <div class="accordion" id="demoAccess">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button"
                                            data-bs-toggle="collapse" data-bs-target="#demoCredentials">
                                        <i class="fas fa-vial me-2"></i>Accès démo
                                    </button>
                                </h2>
                                <div id="demoCredentials" class="accordion-collapse collapse"
                                     data-bs-parent="#demoAccess">
                                    <div class="accordion-body">
                                        <small class="text-muted d-block mb-2">Comptes de démonstration :</small>
                                        <div class="row g-2">
                                            <div class="col-md-4">
                                                <button type="button" class="btn btn-sm btn-outline-primary w-100"
                                                        onclick="setDemoCredentials('admin', 'admin123')">
                                                    Admin
                                                </button>
                                            </div>
                                            <div class="col-md-4">
                                                <button type="button" class="btn btn-sm btn-outline-info w-100"
                                                        onclick="setDemoCredentials('docteur1', 'docteur123')">
                                                    Docteur
                                                </button>
                                            </div>
                                            <div class="col-md-4">
                                                <button type="button" class="btn btn-sm btn-outline-success w-100"
                                                        onclick="setDemoCredentials('patient1', 'patient123')">
                                                    Patient
                                                </button>
                                            </div>
                                        </div>
                                        <div class="mt-3 text-center">
                                            <a href="@Url.Action("CreateTestUsers")"
                                               class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-plus-circle me-1"></i>Créer comptes de test
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer text-center py-3">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>Système sécurisé - Votre santé est notre priorité
                    </small>
                </div>
            </div>

            <!-- Accès public -->
            <div class="text-center mt-4">
                <a href="@Url.Action("PatientAccess")" class="btn btn-outline-secondary">
                    <i class="fas fa-user-md me-2"></i>Accès patient sans compte
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = input.parentElement.querySelector('i');

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        function setDemoCredentials(username, password) {
            document.getElementById('username').value = username;
            document.getElementById('password').value = password;

            // Petite animation pour montrer qu'on a rempli
            const btn = event.target;
            btn.innerHTML = '<i class="fas fa-check me-1"></i>Rempli';
            btn.classList.remove('btn-outline-primary', 'btn-outline-info', 'btn-outline-success');
            btn.classList.add('btn-success');

            setTimeout(() => {
                btn.innerHTML = username === 'admin' ? 'Admin' :
                               username === 'docteur1' ? 'Docteur' : 'Patient';
                btn.classList.remove('btn-success');
                btn.classList.add(
                    username === 'admin' ? 'btn-outline-primary' :
                    username === 'docteur1' ? 'btn-outline-info' : 'btn-outline-success'
                );
            }, 1000);
        }

        // Focus sur le premier champ
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('username').focus();
        });
    </script>

    <style>
        .card {
            border-radius: 15px;
            overflow: hidden;
        }

        .card-header {
            border-radius: 15px 15px 0 0 !important;
        }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        .btn-primary {
            background: linear-gradient(45deg, #0d6efd, #0b5ed7);
            border: none;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(13, 110, 253, 0.4);
            }

        .form-label {
            font-weight: 500;
        }

        .accordion-button:not(.collapsed) {
            background-color: #f8f9fa;
            color: #0d6efd;
        }
    </style>
}