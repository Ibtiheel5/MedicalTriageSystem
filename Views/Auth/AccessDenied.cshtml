@{
    ViewData["Title"] = "Accès Refusé";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="fas fa-ban me-2"></i>Accès Refusé</h3>
                </div>
                <div class="card-body text-center">
                    <i class="fas fa-lock fa-5x text-danger mb-4"></i>
                    <h4>Vous n'avez pas l'autorisation d'accéder à cette page.</h4>
                    <p class="text-muted">Contactez l'administrateur si vous pensez que c'est une erreur.</p>

                    <div class="mt-4">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Home" asp-action="Dashboard" class="btn btn-primary me-2">
                                <i class="fas fa-tachometer-alt me-1"></i>Tableau de bord
                            </a>
                        }
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-1"></i>Accueil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>