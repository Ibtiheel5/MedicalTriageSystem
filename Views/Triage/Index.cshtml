@model MedicalTriageSystem.Models.Patient
@{
    ViewData["Title"] = "Questionnaire Triage";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h2 class="text-center mb-0">
                        <i class="bi bi-clipboard2-pulse me-2"></i>Questionnaire de Triage Médical
                    </h2>
                    <p class="text-center mb-0 mt-2 opacity-75">Évaluation rapide de l'urgence médicale</p>
                </div>

                <div class="card-body p-4">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div class="alert alert-info mb-4">
                            <i class="bi bi-info-circle me-2"></i>
                            Ce questionnaire est pour les utilisateurs connectés.
                            <a asp-controller="Auth" asp-action="Login" class="alert-link">Connectez-vous</a> ou
                            <a asp-controller="Auth" asp-action="Register" class="alert-link">créez un compte</a>.
                        </div>
                    }

                    <form asp-action="Index" method="post" id="triageForm">
                        <!-- Informations du patient -->
                        <div class="patient-info-section-section mb-5">
                            <h4 class="section-title mb-3">
                                <i class="bi bi-person-circle me-2"></i>Informations du patient
                            </h4>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Name" class="form-control" placeholder="Nom complet" required />
                                        <label asp-for="Name">Nom complet *</label>
                                        <span asp-validation-for="Name" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-floating">
                                        <input asp-for="Age" class="form-control" placeholder="Âge" required type="number" min="0" max="120" id="Age" />
                                        <label asp-for="Age">Âge *</label>
                                        <span asp-validation-for="Age" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-floating">
                                        <select asp-for="Gender" class="form-select" required>
                                            <option value="">Sélectionnez</option>
                                            <option value="Homme">Homme</option>
                                            <option value="Femme">Femme</option>
                                            <option value="Autre">Autre</option>
                                        </select>
                                        <label asp-for="Gender">Genre *</label>
                                        <span asp-validation-for="Gender" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="Phone" class="form-control" placeholder="Téléphone" type="tel" />
                                        <label asp-for="Phone">Téléphone</label>
                                        <span asp-validation-for="Phone" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Symptômes (développé avec plus d'options) -->
                        <div class="symptoms-section mb-5">
                            <h4 class="section-title mb-3">
                                <i class="bi bi-symptom me-2"></i>Symptômes principaux
                            </h4>
                            <div class="row g-3">
                                <!-- Ajoute plus de symptômes ici pour développement -->
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input symptom-checkbox" type="checkbox" id="fievre" data-symptom="Fièvre">
                                        <label class="form-check-label" for="fievre">Fièvre</label>
                                        <select class="form-select mt-1 severity-select" data-symptom-id="fievre" style="display:none;">
                                            <option value="1">Léger</option>
                                            <option value="2">Modéré</option>
                                            <option value="3">Sévère</option>
                                        </select>
                                    </div>
                                </div>
                                <!-- Ajoute d'autres symptômes similaires -->
                            </div>
                        </div>

                        <!-- Bouton soumission -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-search-heart me-2"></i>Soumettre le questionnaire
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Afficher sévérité quand checkbox coché
        $('.symptom-checkbox').change(function() {
            const select = $(`[data-symptom-id="${this.id}"]`);
            select.toggle(this.checked);
        });

        // Calcul score (développé)
        function calculateTotalScore() {
            let score = 0;
            $('.severity-select:visible').each(function() {
                score += parseInt($(this).val());
            });
            $('#totalScore').text(score);
            // Mise à jour progress bar, etc.
        }

        $('select, input').on('change input', calculateTotalScore);

        // Validation
        $('#triageForm').submit(function(e) {
            if ($('.symptom-checkbox:checked').length === 0) {
                e.preventDefault();
                alert('Sélectionnez au moins un symptôme.');
            }
            // Collecte symptoms pour POST
            const symptoms = [];
            $('.symptom-checkbox:checked').each(function() {
                const name = $(this).data('symptom');
                const severity = $(`[data-symptom-id="${this.id}"]`).val();
                symptoms.push({ name, severity: parseInt(severity) });
            });
            $('<input type="hidden" name="symptomsData" />').val(JSON.stringify(symptoms)).appendTo(this);
            $('<input type="hidden" name="triageScore" />').val($('#totalScore').text()).appendTo(this);
        });
    </script>
}