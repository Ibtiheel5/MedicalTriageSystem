@{
    ViewData["Title"] = "Résultat du Triage";
    var level = ViewBag.Level as string ?? "Normal";
    var levelClass = level switch
    {
        "Urgent" => "danger",
        "Élevé" => "warning",
        "Normal" => "info",
        "Faible" => "success",
        _ => "info"
    };
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold text-primary mb-3">
                    <i class="bi bi-clipboard2-check me-2"></i>Résultat du Triage
                </h1>
                <p class="lead text-muted">Évaluation complète de votre situation médicale</p>
            </div>

            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-gradient bg-primary text-white py-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-0">Bonjour @ViewBag.PatientName</h3>
                            <p class="mb-0 opacity-75">Référence: #TRG-@DateTime.Now.ToString("yyyyMMddHHmmss")</p>
                        </div>
                        <div class="text-end">
                            <div class="badge bg-white text-primary fs-6 px-3 py-2">
                                <i class="bi bi-calendar3 me-1"></i>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="alert alert-level-@levelClass text-center py-4 mb-4">
                        <i class="bi bi-exclamation-triangle-fill fs-1 mb-3"></i>
                        <h4 class="alert-heading">Niveau d'urgence : @level</h4>
                        <p class="lead mb-0">Recommandation : @ViewBag.Recommendation</p>
                    </div>

                    <div class="text-center">
                        <a asp-controller="PatientDashboard" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-tachometer me-2"></i>Retour à mon dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .alert-level-danger {
            background: linear-gradient(135deg, #dc3545, #ff6b6b);
            box-shadow: 0 0 20px rgba(220, 53, 69, 0.3);
        }

        /* Autres styles inchangés */
    </style>
}