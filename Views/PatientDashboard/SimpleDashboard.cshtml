@{
    ViewData["Title"] = "Tableau de Bord Patient";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-user-injured me-2"></i>Tableau de Bord Patient
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <h4 class="alert-heading">Bienvenue, @ViewBag.PatientName !</h4>
                        <p>Vous êtes connecté en tant que patient.</p>
                        <hr>
                        <p class="mb-0">
                            <strong>Email :</strong> @ViewBag.PatientEmail<br>
                            <strong>Rôle :</strong> @ViewBag.UserRole<br>
                            <strong>ID Patient :</strong> @ViewBag.PatientId
                        </p>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body text-center">
                                    <i class="fas fa-clipboard-list fa-3x text-primary mb-3"></i>
                                    <h5>Nouveau Triage</h5>
                                    <p>Effectuez un nouveau triage médical</p>
                                    <a href="/Triage" class="btn btn-primary">Commencer</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body text-center">
                                    <i class="fas fa-calendar-alt fa-3x text-info mb-3"></i>
                                    <h5>Mes Rendez-vous</h5>
                                    <p>Consultez vos rendez-vous médicaux</p>
                                    <a href="/Appointments" class="btn btn-info">Voir</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body text-center">
                                    <i class="fas fa-file-medical fa-3x text-success mb-3"></i>
                                    <h5>Mes Résultats</h5>
                                    <p>Consultez vos résultats de triage</p>
                                    <a href="/TriageResults" class="btn btn-success">Voir</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h4>Actions rapides</h4>
                        <div class="d-grid gap-2 d-md-block">
                            <a href="/Patients/Details/@ViewBag.PatientId" class="btn btn-outline-primary">
                                <i class="fas fa-user me-1"></i>Mon Profil
                            </a>
                            <a href="/Symptoms" class="btn btn-outline-warning">
                                <i class="fas fa-thermometer-half me-1"></i>Mes Symptômes
                            </a>
                            <a href="/MedicalRecords" class="btn btn-outline-info">
                                <i class="fas fa-file-medical-alt me-1"></i>Dossier Médical
                            </a>
                            <a href="/Auth/Logout" class="btn btn-outline-danger">
                                <i class="fas fa-sign-out-alt me-1"></i>Déconnexion
                            </a>
                        </div>
                    </div>

                    <div class="mt-4">
                        <div class="alert alert-info">
                            <h5><i class="fas fa-info-circle me-2"></i>Informations</h5>
                            <p>
                                Ceci est une version simplifiée de votre tableau de bord.
                                Toutes les fonctionnalités ne sont pas encore disponibles.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 10px;
            border: none;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        .btn {
            border-radius: 5px;
        }
    </style>
}