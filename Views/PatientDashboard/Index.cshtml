@model MedicalTriageSystem.Models.ViewModels.PatientDashboardViewModel
@{
    ViewData["Title"] = "Tableau de Bord Patient";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-heartbeat me-2"></i>Mon Tableau de Bord Médical
                        </h4>
                        <span class="badge bg-light text-primary fs-6">
                            Patient
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Patient Info -->
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0"><i class="fas fa-user me-2"></i>Informations Personnelles</h5>
                                </div>
                                <div class="card-body">
                                    <div class="text-center mb-3">
                                        <div class="avatar-circle bg-primary mb-3 mx-auto">
                                            <i class="fas fa-user-md fa-2x text-white"></i>
                                        </div>
                                        <h5>@Model.Patient.Name</h5>
                                        <p class="text-muted">Patient</p>
                                    </div>

                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item d-flex justify-content-between">
                                            <span><i class="fas fa-birthday-cake me-2 text-primary"></i>Âge</span>
                                            <span class="fw-bold">@Model.Patient.Age ans</span>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between">
                                            <span><i class="fas fa-envelope me-2 text-primary"></i>Email</span>
                                            <span>@Model.Patient.Email</span>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between">
                                            <span><i class="fas fa-phone me-2 text-primary"></i>Téléphone</span>
                                            <span>@Model.Patient.Phone</span>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between">
                                            <span><i class="fas fa-venus-mars me-2 text-primary"></i>Genre</span>
                                            <span>@Model.Patient.Gender</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Last Triage Result -->
                        <div class="col-md-8">
                            @if (Model.LastTriage != null)
                            {
                                <div class="card mb-4">
                                    <div class="card-header @(Model.LastTriage.Level == "Urgent" ? "bg-danger" : Model.LastTriage.Level == "High" ? "bg-warning" : Model.LastTriage.Level == "Normal" ? "bg-info" : "bg-success") text-white">
                                        <h5 class="mb-0">
                                            <i class="fas fa-clipboard-check me-2"></i>Dernier Résultat de Triage
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-4 text-center">
                                                <div class="display-6 fw-bold @(Model.LastTriage.Level == "Urgent" ? "text-danger" : Model.LastTriage.Level == "High" ? "text-warning" : Model.LastTriage.Level == "Normal" ? "text-info" : "text-success")">
                                                    @Model.LastTriage.Level
                                                </div>
                                                <small class="text-muted">Niveau</small>
                                            </div>
                                            <div class="col-md-4 text-center">
                                                <div class="display-6 fw-bold text-primary">
                                                    @Model.LastTriage.Score
                                                </div>
                                                <small class="text-muted">Score</small>
                                            </div>
                                            <div class="col-md-4 text-center">
                                                <div class="display-6 fw-bold text-secondary">
                                                    @Model.LastTriage.Date.ToString("dd/MM/yyyy")
                                                </div>
                                                <small class="text-muted">Date</small>
                                            </div>
                                        </div>

                                        <div class="mt-4">
                                            <h6>Recommandations :</h6>
                                            <div class="alert @(Model.LastTriage.Level == "Urgent" ? "alert-danger" : Model.LastTriage.Level == "High" ? "alert-warning" : Model.LastTriage.Level == "Normal" ? "alert-info" : "alert-success")">
                                                <i class="fas fa-stethoscope me-2"></i>
                                                @Model.LastTriage.Recommendation
                                            </div>
                                        </div>

                                        <div class="mt-3">
                                            <h6>Médecin assigné :</h6>
                                            <div class="d-flex align-items-center">
                                                @if (Model.LastTriage?.Doctor != null)
                                                {
                                                    <div class="avatar-circle bg-success me-3">
                                                        <i class="fas fa-user-md text-white"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-1">@Model.LastTriage.Doctor.Name</h6>
                                                        <small class="text-muted">@Model.LastTriage.Doctor.Specialty</small>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="text-muted">
                                                        <i class="fas fa-user-slash me-2"></i>Aucun médecin assigné
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="card mb-4">
                                    <div class="card-header bg-secondary text-white">
                                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Aucun Triage Effectué</h5>
                                    </div>
                                    <div class="card-body text-center py-5">
                                        <i class="fas fa-clipboard fa-4x text-muted mb-3"></i>
                                        <h5>Aucun triage n'a été effectué pour le moment</h5>
                                        <p class="text-muted">Veuillez consulter un médecin pour effectuer un premier triage.</p>
                                        <a asp-controller="Triage" asp-action="Create" class="btn btn-primary mt-2">
                                            <i class="fas fa-plus-circle me-2"></i>Demander un Triage
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Triage History -->
                    @if (Model.TriageHistory.Any())
                    {
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">
                                            <i class="fas fa-history me-2"></i>Historique des Triage
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Date</th>
                                                        <th>Niveau</th>
                                                        <th>Score</th>
                                                        <th>Médecin</th>
                                                        <th>Recommandation</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var triage in Model.TriageHistory)
                                                    {
                                                        <tr>
                                                            <td>@triage.Date.ToString("dd/MM/yyyy HH:mm")</td>
                                                            <td>
                                                                <span class="badge @(triage.Level == "Urgent" ? "bg-danger" : triage.Level == "High" ? "bg-warning" : triage.Level == "Normal" ? "bg-info" : "bg-success")">
                                                                    @triage.Level
                                                                </span>
                                                            </td>
                                                            <td>
                                                                <span class="fw-bold">@triage.Score</span>
                                                            </td>
                                                            <td>
                                                                @if (triage.Doctor != null)
                                                                {
                                                                    <span>@triage.Doctor.Name</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="text-muted">Non assigné</span>
                                                                }
                                                            </td>
                                                            <td>
                                                                <small>@triage.Recommendation</small>
                                                            </td>
                                                            <td>
                                                                <button class="btn btn-sm btn-outline-primary"
                                                                        onclick="showTriageDetails(@triage.Id)">
                                                                    <i class="fas fa-eye"></i>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Quick Actions -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Actions Rapides</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <a asp-controller="Appointments" asp-action="Create" class="btn btn-primary w-100 mb-3">
                                                <i class="fas fa-calendar-plus me-2"></i>Nouveau Rendez-vous
                                            </a>
                                        </div>
                                        <div class="col-md-3">
                                            <a asp-controller="Symptoms" asp-action="Create" class="btn btn-info w-100 mb-3">
                                                <i class="fas fa-notes-medical me-2"></i>Ajouter Symptômes
                                            </a>
                                        </div>
                                        <div class="col-md-3">
                                            <a asp-controller="Triage" asp-action="Create" class="btn btn-warning w-100 mb-3">
                                                <i class="fas fa-stethoscope me-2"></i>Demander Triage
                                            </a>
                                        </div>
                                        <div class="col-md-3">
                                            <a asp-controller="Patient" asp-action="Profile" class="btn btn-success w-100 mb-3">
                                                <i class="fas fa-user-edit me-2"></i>Modifier Profil
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showTriageDetails(triageId) {
            // Implement triage details modal
            alert('Détails du triage #' + triageId);
        }

        // Update last seen time
        function updateLastSeen() {
            const now = new Date();
            document.getElementById('lastSeen').textContent =
                'Dernière connexion: ' + now.toLocaleTimeString('fr-FR');
        }

        // Update every minute
        setInterval(updateLastSeen, 60000);
        updateLastSeen();
    </script>

    <style>
        .avatar-circle {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
        }

        .card {
            border: none;
            border-radius: 10px;
            margin-bottom: 1.5rem;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
            padding: 1rem 1.5rem;
        }

        .table th {
            font-weight: 600;
            color: #495057;
            background-color: #f8f9fa;
        }

        .badge {
            padding: 0.5em 1em;
            font-size: 0.85em;
            font-weight: 600;
        }

        .btn {
            border-radius: 8px;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
        }
    </style>
}