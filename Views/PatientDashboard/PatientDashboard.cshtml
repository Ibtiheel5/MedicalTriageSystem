            <!-- Widget d'alerte rapide -->
            <div class="main-card p-4 mt-4 animate-slide-up" style="animation-delay: 0.5s">
                <div class="d-flex align-items-center mb-3">
                    <div class="icon-box bg-danger bg-opacity-10 text-danger me-3">
                        <i class="bi bi-bell"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-0">Alerte Rapide</h6>
                        <small class="text-muted">En cas d'urgence</small>
                    </div>
                </div>
                <button class="btn btn-danger w-100 rounded-pill py-2 mb-2">
                    <i class="bi bi-telephone me-2"></i>Appel d'Urgence
                </button>
                <button class="btn btn-outline-danger w-100 rounded-pill py-2">
                    <i class="bi bi-geo-alt me-2"></i>Localiser les urgences
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialisation des tooltips Bootstrap
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });

        // Graphique santé avancé
        const ctx = document.getElementById('healthChart').getContext('2d');
        const healthChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Lun', 'Mar', 'Mer', 'Jeu', 'Ven', 'Sam', 'Dim'],
                datasets: [
                    {
                        label: 'Pouls (BPM)',
                        data: [68, 72, 70, 75, @Model.HealthMetrics.HeartRate, 69, 67],
                        borderColor: '#e71d36',
                        backgroundColor: 'rgba(231, 29, 54, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4,
                        pointBackgroundColor: '#e71d36',
                        pointRadius: 4,
                        pointHoverRadius: 6
                    },
                    {
                        label: 'Température (°C)',
                        data: [36.5, 36.6, 36.7, @Model.HealthMetrics.Temperature, 36.8, 36.7, 36.6],
                        borderColor: '#ff9f1c',
                        backgroundColor: 'rgba(255, 159, 28, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4,
                        pointBackgroundColor: '#ff9f1c',
                        pointRadius: 4,
                        pointHoverRadius: 6
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            usePointStyle: true,
                            padding: 20,
                            font: {
                                size: 12
                            }
                        }
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                        backgroundColor: 'rgba(0, 0, 0, 0.7)',
                        padding: 12,
                        cornerRadius: 8
                    }
                },
                scales: {
                    y: {
                        beginAtZero: false,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        },
                        ticks: {
                            font: {
                                size: 11
                            }
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        },
                        ticks: {
                            font: {
                                size: 11
                            }
                        }
                    }
                },
                interaction: {
                    intersect: false,
                    mode: 'nearest'
                }
            }
        });

        // Gestion des périodes du graphique
        document.querySelectorAll('[data-period]').forEach(button => {
            button.addEventListener('click', function() {
                document.querySelectorAll('[data-period]').forEach(btn => {
                    btn.classList.remove('active');
                });
                this.classList.add('active');

                const period = this.dataset.period;
                let labels, data1, data2;

                switch(period) {
                    case 'week':
                        labels = ['Lun', 'Mar', 'Mer', 'Jeu', 'Ven', 'Sam', 'Dim'];
                        data1 = [68, 72, 70, 75, @Model.HealthMetrics.HeartRate, 69, 67];
                        data2 = [36.5, 36.6, 36.7, @Model.HealthMetrics.Temperature, 36.8, 36.7, 36.6];
                        break;
                    case 'month':
                        labels = Array.from({length: 30}, (_, i) => i + 1);
                        data1 = Array.from({length: 30}, () => Math.floor(Math.random() * 20) + 65);
                        data2 = Array.from({length: 30}, () => 36.5 + Math.random() * 0.6);
                        break;
                    case 'year':
                        labels = ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Jun', 'Jul', 'Aoû', 'Sep', 'Oct', 'Nov', 'Déc'];
                        data1 = [72, 71, 70, 69, 68, 70, 72, 71, 70, 69, 68, 70];
                        data2 = [36.6, 36.7, 36.8, 36.9, 37.0, 36.8, 36.7, 36.6, 36.7, 36.8, 36.9, 36.7];
                        break;
                }

                healthChart.data.labels = labels;
                healthChart.data.datasets[0].data = data1;
                healthChart.data.datasets[1].data = data2;
                healthChart.update();
            });
        });

        // Animation au défilement
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate__animated', 'animate__fadeInUp');
                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);

        // Observer les cartes pour l'animation
        document.querySelectorAll('.main-card').forEach(card => {
            observer.observe(card);
        });

        // Mise à jour en temps réel de l'heure
        function updateTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('fr-FR', {
                hour: '2-digit',
                minute: '2-digit'
            });
            document.querySelector('.glass-panel .fw-bold').textContent = timeString;
        }

        setInterval(updateTime, 60000);

        // Effet de survol sur les boutons d'action
        document.querySelectorAll('.action-button').forEach(button => {
            button.addEventListener('mouseenter', function() {
                const icon = this.querySelector('.icon');
                icon.style.transform = 'scale(1.1) rotate(5deg)';
            });

            button.addEventListener('mouseleave', function() {
                const icon = this.querySelector('.icon');
                icon.style.transform = 'scale(1) rotate(0deg)';
            });
        });

        // Simulation de notification
        setTimeout(() => {
            const notification = document.createElement('div');
            notification.className = 'position-fixed bottom-0 end-0 m-3 alert alert-success alert-dismissible fade show shadow-lg';
            notification.style.maxWidth = '350px';
            notification.innerHTML = `
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <div class="d-flex align-items-center">
                    <i class="bi bi-check-circle-fill text-success fs-4 me-3"></i>
                    <div>
                        <h6 class="fw-bold mb-1">Données synchronisées</h6>
                        <p class="small mb-0">Vos signes vitaux ont été mis à jour</p>
                    </div>
                </div>
            `;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => notification.remove(), 300);
            }, 5000);
        }, 3000);
    </script>
}