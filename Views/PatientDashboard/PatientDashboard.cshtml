                }
            </div>
        </div>

        <!-- Colonne latérale -->
        <div class="col-lg-4">
            <!-- Rendez-vous à venir -->
            <!-- Rendez-vous à venir - Section corrigée -->
            <div class="main-card p-4 mb-4 animate-slide-up" style="animation-delay: 0.3s">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="fw-bold mb-0"><i class="bi bi-calendar-check text-primary me-2"></i>Rendez-vous à Venir</h5>
                    <span class="badge bg-primary">@Model.UpcomingAppointments.Count()</span>
                </div>

                @if (Model.UpcomingAppointments.Any())
                {
                    <div class="timeline">
                        @foreach (var app in Model.UpcomingAppointments)
                        {
                            <div class="timeline-item">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="fw-bold mb-1">
                                            @if (app.Doctor != null)
                                            {
                                                <text>Dr. @app.Doctor.Name</text>
                                            }
                                            else
                                            {
                                                <text>Médecin généraliste</text>
                                            }
                                        </h6>
                                        <p class="text-muted small mb-1">@app.Reason</p>
                                    </div>
                                    <span class="badge bg-soft-primary text-primary px-3 py-1">
                                        @app.Date.ToString("dd/MM")
                                        @if (app.StartTime.HasValue)
                                        {
                                            <text>à @app.StartTime.Value.ToString(@"hh\:mm")</text>
                                        }
                                    </span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <!-- Solution pour gérer l'absence de Location -->
                                    <span class="small text-muted">
                                        <i class="bi bi-geo-alt me-1"></i>
                                        @{
                                            // Utiliser une logique conditionnelle pour la localisation
                                            var locationText = "Cabinet médical";
                                            if (app.Doctor != null && !string.IsNullOrEmpty(app.Doctor.Specialty))
                                            {
                                                locationText = app.Doctor.Specialty.Contains("urgent") ?
                                                "Service d'urgences" : "Cabinet médical";
                                            }
                                            @locationText
                                        }
                                    </span>
                                    <button class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                        <i class="bi bi-camera-video me-1"></i>Rejoindre
                                    </button>
                                </div>
                            </div>
                        }
                    </div>

                    <button class="btn btn-primary w-100 mt-3 rounded-pill">
                        <i class="bi bi-plus-circle me-2"></i>Nouveau rendez-vous
                    </button>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-calendar-x display-1 text-muted mb-3"></i>
                        <p class="text-muted">Aucun rendez-vous prévu</p>
                        <button class="btn btn-outline-primary rounded-pill">Planifier un RDV</button>
                    </div>
                }
            </div>

            <!-- Médecins en ligne -->
            <div class="main-card p-4 animate-slide-up" style="animation-delay: 0.4s">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="fw-bold mb-0"><i class="bi bi-activity text-primary me-2"></i>Équipe Médicale en Ligne</h5>
                    <span class="status-indicator status-online"></span>
                </div>

                @foreach (var doc in Model.DoctorAvailability)
                {
                    <div class="doctor-card">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <div class="doctor-avatar me-3">
                                    @doc.Name.Split(' ').Select(n => n[0]).Take(2).Aggregate("", (a, b) => a + b)
                                </div>
                                <div>
                                    <div class="fw-bold">Dr. @doc.Name</div>
                                    <div class="small text-muted">@doc.Specialty</div>
                                    <div class="small d-flex align-items-center">
                                        <span class="status-indicator status-online me-1"></span>
                                        <span class="text-success">Disponible</span>
                                    </div>
