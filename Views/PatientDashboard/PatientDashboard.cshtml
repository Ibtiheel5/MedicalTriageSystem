                            </div>
                            <div class="col">
                                <div class="text-muted small">Spécialité recommandée</div>
                                <div class="fw-bold">@(Model.LastTriageResult.Score > 70 ? "Urgences" : "Médecin généraliste")</div>
                            </div>
                            <div class="col">
                                <div class="text-muted small">Suivi requis</div>
