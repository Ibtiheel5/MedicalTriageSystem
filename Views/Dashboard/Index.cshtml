@model MedicalTriageSystem.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Tableau de Bord";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="page-title">
                    <i class="fas fa-tachometer-alt me-2"></i>Tableau de Bord
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>
                </nav>
            </div>
            <div class="col-auto">
                <div class="btn-group">
                    <button class="btn btn-primary">
                        <i class="fas fa-sync-alt me-1"></i>Actualiser
                    </button>
                    <button class="btn btn-outline-primary" onclick="exportDashboardData()">
                        <i class="fas fa-download me-1"></i>Exporter
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <!-- Total Patients -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Patients Totaux
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Statistics.TotalPatients
                            </div>
                            <div class="mt-2">
                                <span class="text-success small">
                                    <i class="fas fa-user-plus me-1"></i>+5 cette semaine
                                </span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-injured fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Doctors -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Médecins
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Statistics.TotalDoctors
                            </div>
                            <div class="mt-2">
                                <span class="text-success small">
                                    <i class="fas fa-user-md me-1"></i>@Model.DoctorAvailability.Count(d => d.IsAvailable) disponible(s)
                                </span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-md fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Triages -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Triage Totaux
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Statistics.TotalTriages
                            </div>
                            <div class="mt-2">
                                <span class="text-info small">
                                    <i class="fas fa-calendar-day me-1"></i>@Model.Statistics.TodayTriages aujourd'hui
                                </span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Urgent Cases -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Cas Urgents
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Statistics.UrgentCases
                            </div>
                            <div class="mt-2">
                                <span class="text-danger small">
                                    <i class="fas fa-exclamation-triangle me-1"></i>Nécessite attention immédiate
                                </span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-circle fa-2x text-danger"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <!-- Recent Patients -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-users me-1"></i>Patients Récents
                    </h6>
                    <a href="/Patients" class="btn btn-sm btn-outline-primary">Voir tous</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Patient</th>
                                    <th>Âge</th>
                                    <th>Contact</th>
                                    <th>Triage</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var patient in Model.RecentPatients)
                                {
                                    // ✅ CORRECTION : Utiliser TriageResults au lieu de TriageResult
                                    var lastTriage = patient.TriageResults?.OrderByDescending(t => t.Date).FirstOrDefault();
                                    var triageLevel = lastTriage?.Level ?? "Non évalué";
                                    var triageScore = lastTriage?.Score ?? 0;

                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle-sm bg-primary me-3">
                                                    <i class="fas fa-user text-white"></i>
                                                </div>
                                                <div>
                                                    <strong>@patient.Name</strong>
                                                    <div class="small text-muted">ID: @patient.Id</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@patient.Age ans</td>
                                        <td>
                                            <small class="d-block">@patient.Email</small>
                                            <small class="text-muted">@patient.Phone</small>
                                        </td>
                                        <td>
                                            <span class="badge @(triageLevel == "Urgent" ? "bg-danger" :
                                                                                                                      triageLevel == "High" ? "bg-warning" :
                                                                                                                      triageLevel == "Normal" ? "bg-info" :
                                                                                                                      triageLevel == "Low" ? "bg-success" : "bg-secondary")">
                                            @triageLevel
                                        </span>
                                        @if (triageScore > 0)
                                            {
                                                <div class="small text-muted">Score: @triageScore</div>
                                            }
                                        </td>
                                        <td>
                                            <small>@patient.CreatedAt.ToString("dd/MM/yy")</small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Urgent Cases -->
            @if (Model.UrgentCases.Any())
            {
                <div class="card shadow mb-4">
                    <div class="card-header bg-danger text-white py-3">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-exclamation-triangle me-1"></i>Cas Urgents Nécessitant une Attention Immédiate
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-danger">
                            <i class="fas fa-info-circle me-2"></i>
                            @Model.UrgentCases.Count cas urgent(s) en attente de prise en charge
                        </div>
                        <div class="row">
                            @foreach (var urgentCase in Model.UrgentCases)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card border-danger">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="card-title text-danger">
                                                        <i class="fas fa-user-injured me-1"></i>
                                                        @urgentCase.Patient?.Name
                                                    </h6>
                                                    <p class="card-text small mb-1">
                                                        <i class="fas fa-stethoscope me-1"></i>
                                                        @urgentCase.Recommendation
                                                    </p>
                                                    <p class="card-text small text-muted mb-0">
                                                        <i class="fas fa-clock me-1"></i>
                                                        @urgentCase.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                                    </p>
                                                </div>
                                                <div class="text-end">
                                                    <span class="badge bg-danger">Score: @urgentCase.Score</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Right Sidebar -->
        <div class="col-xl-4 col-lg-5">
            <!-- Doctor Availability -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-user-md me-1"></i>Disponibilité des Médecins
                    </h6>
                </div>
                <div class="card-body">
                    @foreach (var doctor in Model.DoctorAvailability)
                    {
                        <div class="doctor-item mb-3 p-3 border rounded">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">@doctor.Name</h6>
                                    <small class="text-muted">@doctor.Specialty</small>
                                </div>
                                <div>
                                    @if (doctor.IsAvailable)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>Disponible
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-times-circle me-1"></i>Occupé
                                        </span>
                                    }
                                </div>
                            </div>
                            <div class="mt-2 small">
                                <i class="fas fa-phone me-1 text-muted"></i>@doctor.Phone
                                <br />
                                <i class="fas fa-envelope me-1 text-muted"></i>@doctor.Email
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-pie me-1"></i>Statistiques Rapides
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 mb-4">
                            <div class="display-6 fw-bold text-primary">
                                @Model.Statistics.TodayTriages
                            </div>
                            <small class="text-muted">Triage Aujourd'hui</small>
                        </div>
                        <div class="col-6 mb-4">
                            <div class="display-6 fw-bold text-success">
                                @Model.Statistics.WeekTriages
                            </div>
                            <small class="text-muted">Cette Semaine</small>
                        </div>
                        <div class="col-6">
                            <div class="display-6 fw-bold text-info">
                                @Model.Statistics.AvgTriageTime.ToString(@"mm") min
                            </div>
                            <small class="text-muted">Temps Moyen</small>
                        </div>
                        <div class="col-6">
                            <div class="display-6 fw-bold text-warning">
                                @{
                                    var avgScore = Model.RecentPatients.Any() ?
                                    Model.RecentPatients.Average(p => p.TriageResults?.LastOrDefault()?.Score ?? 0) : 0;
                                }
                                @avgScore.ToString("F1")
                            </div>
                            <small class="text-muted">Score Moyen</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-bolt me-1"></i>Actions Rapides
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/Triage" class="btn btn-primary">
                            <i class="fas fa-clipboard-list me-2"></i>Nouveau Triage
                        </a>
                        <a href="/Patients/Create" class="btn btn-success">
                            <i class="fas fa-user-plus me-2"></i>Nouveau Patient
                        </a>
                        <a href="/Appointments/Create" class="btn btn-info">
                            <i class="fas fa-calendar-plus me-2"></i>Nouveau Rendez-vous
                        </a>
                        <a href="/Reports" class="btn btn-warning">
                            <i class="fas fa-chart-bar me-2"></i>Générer Rapport
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar-circle {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #4e73df;
            color: white;
        }

        .avatar-circle-sm {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 0.9rem;
        }

        .card {
            border-radius: 10px;
            border: 1px solid #e3e6f0;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
            background-color: #f8f9fc;
        }

        .doctor-item {
            transition: all 0.3s ease;
        }

            .doctor-item:hover {
                background-color: #f8f9fa;
                transform: translateY(-2px);
            }

        .border-left-primary {
            border-left: 4px solid #4e73df !important;
        }

        .border-left-success {
            border-left: 4px solid #1cc88a !important;
        }

        .border-left-info {
            border-left: 4px solid #36b9cc !important;
        }

        .border-left-danger {
            border-left: 4px solid #e74a3b !important;
        }

        .table th {
            font-weight: 600;
            color: #5a5c69;
            background-color: #f8f9fc;
        }
    </style>
}

@section Scripts {
    <script>
        function exportDashboardData() {
            alert('Fonction d\'export à implémenter');
        }

        // Mettre à jour le temps
        function updateServerTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('fr-FR', {
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            });
            document.getElementById('currentTime').textContent = timeString;
        }

        // Mettre à jour toutes les minutes
        setInterval(updateServerTime, 1000);
        updateServerTime();
    </script>
}