@model MedicalTriageSystem.Models.ViewModels.PatientDashboardViewModel
@{
    ViewData["Title"] = "Dashboard Patient";
    Layout = "_DashboardLayout";  // ⚠️ Changé pour utiliser le layout admin-like
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="page-title">
                    <i class="fas fa-tachometer-alt me-2"></i> Mon Dashboard
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active">Dashboard Patient</li>
                    </ol>
                </nav>
            </div>
            <div class="col-auto">
                <div class="btn-group">
                    <button class="btn btn-primary">
                        <i class="fas fa-sync-alt me-1"></i>Actualiser
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards (adapté aux stats personnelles) -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Mes Triages</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Statistics.TotalTriages</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-stethoscope fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Cas Urgents</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Statistics.UrgentCases</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Triages Aujourd'hui</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Statistics.TodayTriages</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-day fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Triages Semaine</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Statistics.WeekTriages</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-week fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Symptoms (au lieu de Recent Patients) -->
    <div class="row mb-4">
        <div class="col-xl-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Symptômes Récents</h6>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Sévérité</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var symptom in Model.RecentSymptoms)
                            {
                                <tr>
                                    <td>@symptom.Description</td>
                                    <td>@symptom.Severity</td>
                                    <td>@symptom.Date.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Urgent Cases (personnels) -->
        <div class="col-xl-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-danger">Cas Urgents</h6>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var triage in Model.UrgentCases)
                        {
                            <li class="list-group-item">
                                Score: @triage.Score - @triage.CreatedAt.ToString("dd/MM/yyyy")
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Appointments -->
    <div class="row mb-4">
        <div class="col-xl-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Rendez-vous À Venir</h6>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var appt in Model.UpcomingAppointments)
                        {
                            <li class="list-group-item">
                                @appt.Date.ToString("dd/MM/yyyy") - @appt.Reason (avec @appt.Doctor?.Name)
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Doctor Availability (général, comme admin) -->
        <div class="col-xl-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">Médecins Disponibles</h6>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var doctor in Model.DoctorAvailability)
                        {
                            <li class="list-group-item">
                                @doctor.Name - @doctor.Specialty
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Dernier Triage -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5>Dernier Triage</h5>
                </div>
                <div class="card-body">
                    @if (Model.LastTriage != null)
                    {
                        <p>Niveau: @Model.LastTriage.Level - Score: @Model.LastTriage.Score</p>
                    }
                    else
                    {
                        <p>Aucun triage récent.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Scripts de l'admin (copiés : update time, etc.)
        function updateServerTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('fr-FR', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
            document.getElementById('currentTime').textContent = timeString;
        }
        setInterval(updateServerTime, 1000);
        updateServerTime();
    </script>
}