@{
    ViewData["Title"] = "Accueil - Système de Triage Médical";
}

<div class="container-fluid px-0">
    <!-- Notification en temps réel -->
    <div class="real-time-notification">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div class="notification-content">
                    <i class="bi bi-broadcast me-2"></i>
                    <span class="notification-text">
                        <span id="currentDateTime"></span> |
                        <span id="waitingPatients">Patients en attente: <strong>0</strong></span> |
                        <span id="currentTriageLevel">Niveau d'alerte: <span class="badge bg-success">Normal</span></span>
                    </span>
                </div>
                <div class="notification-indicators">
                    <div class="indicator active" data-bs-toggle="tooltip" title="Service actif">
                        <div class="indicator-dot"></div>
                        <span>Service actif</span>
                    </div>
                    <div class="indicator" data-bs-toggle="tooltip" title="Temps réel">
                        <i class="bi bi-lightning-charge"></i>
                        <span>Temps réel</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hero Section améliorée avec grand logo heartbeat -->
    <div class="medical-hero">
        <div class="container py-5">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="hero-content">
                        <div class="badge-container mb-4">
                            <span class="badge medical-badge">
                                <i class="bi bi-shield-check"></i>
                                Service médical accrédité
                            </span>
                            <span class="badge emergency-badge">
                                <i class="bi bi-clock-history"></i>
                                Ouvert 24h/24
                            </span>
                        </div>

                        <!-- GRAND LOGO HEARTBEAT CENTRAL -->
                        <div class="hero-heartbeat-logo">
                            <div class="heartbeat-main">
                                <div class="heartbeat-inner">
                                    <i class="bi bi-heart-pulse heartbeat-icon"></i>
                                    <div class="heartbeat-glow"></div>
                                    <div class="heartbeat-pulse-ring"></div>
                                    <div class="heartbeat-pulse-ring delay-1"></div>
                                    <div class="heartbeat-pulse-ring delay-2"></div>
                                </div>

                                <!-- Ondes ECG -->
                                <div class="ecg-waves">
                                    <div class="ecg-line"></div>
                                    <div class="ecg-peak"></div>
                                    <div class="ecg-peak delay-1"></div>
                                    <div class="ecg-peak delay-2"></div>
                                </div>
                            </div>

                            <div class="heartbeat-text">
                                <span class="beat-text">Battement</span>
                                <span class="beat-dot">•</span>
                                <span class="beat-text">Cardiaque</span>
                                <span class="beat-dot">•</span>
                                <span class="beat-text">Actif</span>
                            </div>
                        </div>

                        <h1 class="hero-title">
                            <span class="title-line-1">
                                <span class="gradient-text">Medi</span>
                                <span class="gradient-text-accent">Triage</span>
                                <sup class="pro-badge">PRO</sup>
                            </span>
                            <br>
                            <span class="title-line-2">Système Médical Intelligent</span>
                        </h1>

                        <p class="hero-description">
                            <span class="description-highlight">
                                <i class="bi bi-lightning-charge-fill"></i>
                                Évaluation en temps réel
                            </span>
                            de votre état de santé avec notre système de triage avancé.
                            Orientation optimale vers les soins les plus adaptés.
                        </p>

                        <div class="hero-tagline">
                            <div class="tagline-item">
                                <i class="bi bi-check-circle-fill"></i>
                                <span>Prise en charge rapide</span>
                            </div>
                            <div class="tagline-item">
                                <i class="bi bi-shield-fill-check"></i>
                                <span>Sécurité maximale</span>
                            </div>
                            <div class="tagline-item">
                                <i class="bi bi-graph-up-arrow"></i>
                                <span>Efficacité prouvée</span>
                            </div>
                        </div>

                        <div class="hero-stats">
                            <div class="stat-box">
                                <div class="stat-icon">
                                    <i class="bi bi-heart-fill"></i>
                                </div>
                                <div class="stat-number" data-count="99">0</div>
                                <div class="stat-label">Satisfaction</div>
                            </div>
                            <div class="stat-box">
                                <div class="stat-icon">
                                    <i class="bi bi-clock-fill"></i>
                                </div>
                                <div class="stat-number" data-count="15">0</div>
                                <div class="stat-label">Min d'attente</div>
                            </div>
                            <div class="stat-box">
                                <div class="stat-icon">
                                    <i class="bi bi-people-fill"></i>
                                </div>
                                <div class="stat-number" data-count="5000">0</div>
                                <div class="stat-label">Patients</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Carte de Bienvenue 3D améliorée -->
                <div class="col-lg-6">
                    <div class="card-3d-container">
                        <div class="welcome-card-3d">
                            <!-- En-tête avec navigation -->
                            <div class="card-3d-header">
                                <div class="hospital-badge">
                                    <i class="bi bi-hospital"></i>
                                    <span>Hôpital Saint-Vincent</span>
                                </div>
                                <div class="card-nav">
                                    <button class="nav-btn active" data-tab="welcome">
                                        <i class="bi bi-house-door"></i>
                                    </button>
                                    <button class="nav-btn" data-tab="info">
                                        <i class="bi bi-info-circle"></i>
                                    </button>
                                    <button class="nav-btn" data-tab="emergency">
                                        <i class="bi bi-exclamation-triangle"></i>
                                    </button>
                                </div>
                            </div>

                            <!-- Contenu principal avec onglets -->
                            <div class="card-3d-body">
                                <!-- Onglet Welcome -->
                                <div class="tab-content active" id="welcome-tab">
                                    <div class="welcome-animation">
                                        <div class="medical-team">
                                            <div class="doctor-icon">
                                                <i class="bi bi-person-badge"></i>
                                            </div>
                                            <div class="nurse-icon">
                                                <i class="bi bi-person-heart"></i>
                                            </div>
                                            <div class="patient-icon">
                                                <i class="bi bi-person-plus"></i>
                                            </div>
                                        </div>

                                        <h3 class="welcome-message-title">
                                            <span class="text-primary">Bienvenue</span>
                                            <span class="text-danger">chez nous</span>
                                        </h3>

                                        <p class="welcome-message">
                                            Notre équipe de professionnels de santé est dédiée à votre bien-être.
                                            Nous utilisons les dernières technologies pour assurer une prise en charge
                                            rapide et efficace.
                                        </p>

                                        <div class="ai-indicator">
                                            <div class="ai-loader">
                                                <div class="ai-dot"></div>
                                                <div class="ai-dot"></div>
                                                <div class="ai-dot"></div>
                                            </div>
                                            <span>Système d'IA de triage actif</span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Onglet Info -->
                                <div class="tab-content" id="info-tab">
                                    <h4><i class="bi bi-info-circle text-info"></i> Informations pratiques</h4>
                                    <ul class="info-list">
                                        <li>
                                            <i class="bi bi-check-circle-fill text-success"></i>
                                            <span>Prise en charge immédiate</span>
                                        </li>
                                        <li>
                                            <i class="bi bi-check-circle-fill text-success"></i>
                                            <span>Équipement médical dernier cri</span>
                                        </li>
                                        <li>
                                            <i class="bi bi-check-circle-fill text-success"></i>
                                            <span>Personnel qualifié et expérimenté</span>
                                        </li>
                                        <li>
                                            <i class="bi bi-check-circle-fill text-success"></i>
                                            <span>Confidentialité garantie</span>
                                        </li>
                                    </ul>
                                </div>

                                <!-- Onglet Emergency -->
                                <div class="tab-content" id="emergency-tab">
                                    <h4><i class="bi bi-exclamation-triangle text-danger"></i> Urgences</h4>
                                    <div class="emergency-info">
                                        <p>En cas d'urgence vitale :</p>
                                        <div class="emergency-contacts">
                                            <button class="btn-emergency-call" data-number="15">
                                                <i class="bi bi-telephone-outbound"></i>
                                                SAMU 15
                                            </button>
                                            <button class="btn-emergency-call" data-number="112">
                                                <i class="bi bi-telephone-outbound"></i>
                                                Urgence 112
                                            </button>
                                            <button class="btn-emergency-call" data-number="18">
                                                <i class="bi bi-telephone-outbound"></i>
                                                Pompiers 18
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- CTA principal -->
                            <div class="card-3d-footer">
                                <button class="btn-start-triage" id="startTriageBtn">
                                    <div class="btn-pulse-ring"></div>
                                    <div class="btn-content">
                                        <i class="bi bi-clipboard2-pulse"></i>
                                        <div class="btn-text">
                                            <div class="btn-main">Commencer le triage</div>
                                            <div class="btn-sub">Évaluation médicale rapide</div>
                                        </div>
                                        <i class="bi bi-arrow-right"></i>
                                    </div>
                                </button>

                                <div class="quick-options">
                                    <button class="quick-option" data-action="download">
                                        <i class="bi bi-download"></i>
                                        <span>Guide patient</span>
                                    </button>
                                    <button class="quick-option" data-action="map">
                                        <i class="bi bi-geo-alt"></i>
                                        <span>Nous trouver</span>
                                    </button>
                                    <button class="quick-option" data-action="contact">
                                        <i class="bi bi-telephone"></i>
                                        <span>Nous appeler</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Section des services en temps réel -->
    <div class="container py-5">
        <div class="section-header">
            <h2 class="section-title">
                <i class="bi bi-speedometer2"></i>
                Services en temps réel
            </h2>
            <p class="section-subtitle">État actuel de nos services médicaux</p>
        </div>

        <div class="row mb-5">
            <div class="col-md-3 mb-4">
                <div class="service-status-card status-active">
                    <div class="status-indicator"></div>
                    <div class="service-icon">
                        <i class="bi bi-clipboard2-pulse"></i>
                    </div>
                    <h5 class="service-title">Triage</h5>
                    <div class="service-metrics">
                        <span class="metric-value">15 min</span>
                        <span class="metric-label">Attente moyenne</span>
                    </div>
                    <div class="service-progress">
                        <div class="progress-bar" style="width: 60%"></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="service-status-card status-busy">
                    <div class="status-indicator"></div>
                    <div class="service-icon">
                        <i class="bi bi-activity"></i>
                    </div>
                    <h5 class="service-title">Urgences</h5>
                    <div class="service-metrics">
                        <span class="metric-value">25 min</span>
                        <span class="metric-label">Attente moyenne</span>
                    </div>
                    <div class="service-progress">
                        <div class="progress-bar" style="width: 85%"></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="service-status-card status-normal">
                    <div class="status-indicator"></div>
                    <div class="service-icon">
                        <i class="bi bi-heart-pulse"></i>
                    </div>
                    <h5 class="service-title">Cardiologie</h5>
                    <div class="service-metrics">
                        <span class="metric-value">45 min</span>
                        <span class="metric-label">Attente moyenne</span>
                    </div>
                    <div class="service-progress">
                        <div class="progress-bar" style="width: 40%"></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="service-status-card status-available">
                    <div class="status-indicator"></div>
                    <div class="service-icon">
                        <i class="bi bi-patch-check"></i>
                    </div>
                    <h5 class="service-title">Consultations</h5>
                    <div class="service-metrics">
                        <span class="metric-value">Disponible</span>
                        <span class="metric-label">Sans attente</span>
                    </div>
                    <div class="service-progress">
                        <div class="progress-bar" style="width: 20%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Section d'urgence améliorée -->
    <div class="emergency-section">
        <div class="container py-5">
            <div class="emergency-alert">
                <div class="alert-header">
                    <div class="alert-icon">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                    </div>
                    <div class="alert-content">
                        <h3 class="alert-title">⚠️ Urgences vitales - Intervention immédiate requise</h3>
                        <p class="alert-description">
                            Si vous présentez l'un de ces symptômes, rendez-vous immédiatement à l'accueil des urgences
                        </p>
                    </div>
                    <button class="btn-alert-close" onclick="this.parentElement.parentElement.style.display='none'">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>

                <div class="emergency-symptoms">
                    <div class="symptom-card critical">
                        <div class="symptom-icon">
                            <i class="bi bi-heartbreak"></i>
                        </div>
                        <div class="symptom-content">
                            <h5>Douleur thoracique</h5>
                            <p>Oppression, sensation d'écrasement</p>
                        </div>
                        <span class="symptom-priority">P1</span>
                    </div>

                    <div class="symptom-card critical">
                        <div class="symptom-icon">
                            <i class="bi bi-lungs"></i>
                        </div>
                        <div class="symptom-content">
                            <h5>Difficultés respiratoires</h5>
                            <p>Essoufflement, suffocation</p>
                        </div>
                        <span class="symptom-priority">P1</span>
                    </div>

                    <div class="symptom-card critical">
                        <div class="symptom-icon">
                            <i class="bi bi-droplet"></i>
                        </div>
                        <div class="symptom-content">
                            <h5>Hémorragie importante</h5>
                            <p>Saignement abondant, incontrôlable</p>
                        </div>
                        <span class="symptom-priority">P1</span>
                    </div>

                    <div class="symptom-card urgent">
                        <div class="symptom-icon">
                            <i class="bi bi-lightning"></i>
                        </div>
                        <div class="symptom-content">
                            <h5>Traumatisme crânien</h5>
                            <p>Choc violent à la tête</p>
                        </div>
                        <span class="symptom-priority">P2</span>
                    </div>
                </div>

                <div class="emergency-actions">
                    <button class="btn-emergency-action" onclick="window.location.href='tel:15'">
                        <i class="bi bi-telephone-outbound-fill"></i>
                        Appeler le 15 (SAMU)
                    </button>
                    <button class="btn-emergency-action secondary" onclick="window.location.href='tel:112'">
                        <i class="bi bi-phone-vibrate"></i>
                        Numéro européen 112
                    </button>
                    <button class="btn-emergency-action light" id="btnSendLocation">
                        <i class="bi bi-geo-alt-fill"></i>
                        Envoyer ma localisation
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Section Processus interactif -->
    <div class="container py-5">
        <div class="section-header">
            <h2 class="section-title">
                <i class="bi bi-diagram-3"></i>
                Processus de triage intelligent
            </h2>
            <p class="section-subtitle">Un parcours de soins optimisé et sécurisé</p>
        </div>

        <div class="process-timeline">
            <div class="timeline">
                <div class="timeline-step active" data-step="1">
                    <div class="step-circle">
                        <span class="step-number">1</span>
                        <div class="step-pulse"></div>
                    </div>
                    <div class="step-content">
                        <h5>Enregistrement</h5>
                        <p>Identification et création du dossier</p>
                        <div class="step-details">
                            <small><i class="bi bi-clock"></i> ~2 minutes</small>
                        </div>
                    </div>
                </div>

                <div class="timeline-step" data-step="2">
                    <div class="step-circle">
                        <span class="step-number">2</span>
                    </div>
                    <div class="step-content">
                        <h5>Évaluation vitale</h5>
                        <p>Mesure des constantes corporelles</p>
                        <div class="step-details">
                            <small><i class="bi bi-clock"></i> ~5 minutes</small>
                        </div>
                    </div>
                </div>

                <div class="timeline-step" data-step="3">
                    <div class="step-circle">
                        <span class="step-number">3</span>
                    </div>
                    <div class="step-content">
                        <h5>Analyse symptômes</h5>
                        <p>Évaluation par notre système d'IA</p>
                        <div class="step-details">
                            <small><i class="bi bi-clock"></i> ~3 minutes</small>
                        </div>
                    </div>
                </div>

                <div class="timeline-step" data-step="4">
                    <div class="step-circle">
                        <span class="step-number">4</span>
                    </div>
                    <div class="step-content">
                        <h5>Classification</h5>
                        <p>Détermination du niveau d'urgence</p>
                        <div class="step-details">
                            <small><i class="bi bi-clock"></i> ~1 minute</small>
                        </div>
                    </div>
                </div>

                <div class="timeline-step" data-step="5">
                    <div class="step-circle">
                        <span class="step-number">5</span>
                    </div>
                    <div class="step-content">
                        <h5>Orientation</h5>
                        <p>Prise en charge adaptée</p>
                        <div class="step-details">
                            <small><i class="bi bi-clock"></i> ~2 minutes</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="process-preview">
                <div class="preview-content">
                    <div class="preview-header">
                        <h4>Simulation du processus</h4>
                        <button class="btn-play-process" id="playProcessBtn">
                            <i class="bi bi-play-fill"></i>
                            Voir la démo
                        </button>
                    </div>
                    <div class="preview-animation">
                        <div class="animation-container">
                            <div class="patient-avatar">
                                <i class="bi bi-person-circle"></i>
                            </div>
                            <div class="process-flow">
                                <div class="flow-step" data-step="1">
                                    <i class="bi bi-person-check"></i>
                                    <span>Enregistrement</span>
                                </div>
                                <div class="flow-arrow">
                                    <i class="bi bi-arrow-right"></i>
                                </div>
                                <div class="flow-step" data-step="2">
                                    <i class="bi bi-activity"></i>
                                    <span>Évaluation</span>
                                </div>
                                <div class="flow-arrow">
                                    <i class="bi bi-arrow-right"></i>
                                </div>
                                <div class="flow-step" data-step="3">
                                    <i class="bi bi-clipboard-data"></i>
                                    <span>Analyse</span>
                                </div>
                                <div class="flow-arrow">
                                    <i class="bi bi-arrow-right"></i>
                                </div>
                                <div class="flow-step" data-step="4">
                                    <i class="bi bi-check-circle"></i>
                                    <span>Orientation</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Section des témoignages -->
    <div class="testimonials-section">
        <div class="container py-5">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="bi bi-chat-heart"></i>
                    Témoignages de patients
                </h2>
                <p class="section-subtitle">Ce que nos patients disent de nous</p>
            </div>

            <div class="testimonials-slider">
                <div class="testimonial-card">
                    <div class="testimonial-header">
                        <div class="patient-avatar">
                            <img src="https://i.pravatar.cc/150?img=1" alt="Patient">
                        </div>
                        <div class="patient-info">
                            <h5>Marie Dupont</h5>
                            <div class="patient-rating">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                            </div>
                        </div>
                        <div class="testimonial-date">
                            <small>Il y a 2 jours</small>
                        </div>
                    </div>
