            $('.stat-number').each(function() {
                const $this = $(this);
                const target = parseInt($this.data('count'));
                const duration = 2000;
                const step = target / (duration / 16);
                let current = 0;

                const timer = setInterval(() => {
                    current += step;
                    if (current >= target) {
                        $this.text(target);
                        clearInterval(timer);
                    } else {
                        $this.text(Math.floor(current));
                    }
