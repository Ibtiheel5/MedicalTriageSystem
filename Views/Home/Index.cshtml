<script>
    $(document).ready(function() {
        // Fonction pour vérifier si l'utilisateur est authentifié
        function checkAuthentication(callback) {
            $.get('/Auth/IsAuthenticated', function(data) {
                if (callback) callback(data.isAuthenticated);
            }).fail(function() {
                if (callback) callback(false);
            });
        }

        // Intercepter les clics sur les boutons qui nécessitent une authentification
        $('#startTriageBtn, #finalStartTriageBtn').click(function(e) {
            e.preventDefault();
            e.stopPropagation();

            checkAuthentication(function(isAuthenticated) {
                if (isAuthenticated) {
                    // L'utilisateur est connecté, ouvrir le modal de triage
                    $('#startTriageModal').modal('show');
                } else {
                    // Demander la connexion
                    if (confirm('Pour commencer le triage médical, vous devez vous connecter. Souhaitez-vous vous connecter maintenant ?')) {
                        window.location.href = '/Auth/Login?ReturnUrl=' +
                            encodeURIComponent('/Triage/Index');
                    }
                }
            });
        });

        // Gérer les boutons d'action rapide qui nécessitent une connexion
        $('.btn-cta-secondary, .btn-cta-outline').click(function(e) {
            e.preventDefault();
            e.stopPropagation();

            const action = $(this).attr('id');
            checkAuthentication(function(isAuthenticated) {
                if (!isAuthenticated) {
                    let message = '';
                    let redirectUrl = '';

                    switch(action) {
                        case 'scheduleAppointmentBtn':
                            message = 'Pour prendre un rendez-vous, vous devez vous connecter.';
                            redirectUrl = '/Appointments/Create';
                            break;
                        case 'virtualConsultationBtn':
                            message = 'Pour une consultation virtuelle, vous devez vous connecter.';
                            redirectUrl = '/Consultations/Create';
                            break;
                        default:
                            message = 'Pour accéder à cette fonctionnalité, vous devez vous connecter.';
                            redirectUrl = '/Auth/Login';
                    }

                    if (confirm(message + ' Souhaitez-vous vous connecter maintenant ?')) {
                        window.location.href = '/Auth/Login?ReturnUrl=' +
                            encodeURIComponent(redirectUrl);
                    }
                    return;
                }

                // Si authentifié, exécuter l'action
                switch(action) {
                    case 'scheduleAppointmentBtn':
                        alert('Fonctionnalité de prise de rendez-vous - Redirection...');
                        window.location.href = '/Appointments/Create';
                        break;
                    case 'virtualConsultationBtn':
                        alert('Service de consultation virtuelle - Redirection...');
                        window.location.href = '/Consultations/Create';
                        break;
                }
            });
        });

        // Fonction pour les boutons d'appel d'urgence (toujours accessibles)
        $('.btn-emergency-call, .btn-emergency-action').click(function(e) {
            e.preventDefault();
            e.stopPropagation();

            const number = $(this).data('number') ||
                          $(this).find('i').hasClass('bi-telephone-outbound-fill') ? '15' :
                          $(this).find('i').hasClass('bi-phone-vibrate') ? '112' : null;

            if (number && confirm(`Voulez-vous appeler le ${number} ?`)) {
                window.location.href = `tel:${number}`;
            }
        });
    });
