                            const message = `Ma position: https://maps.google.com/?q=${lat},${lng}`;

                            // Option 1: Partage via Web Share API
                            if (navigator.share) {
                                navigator.share({
                                    title: 'Ma position d\'urgence',
                                    text: message
                                });
                            } else {
                                // Option 2: Copie dans le presse-papier
                                navigator.clipboard.writeText(message)
                                    .then(() => alert('Position copiée dans le presse-papier !'));
                            }
                        },
                        function(error) {
                            alert('Impossible d\'obtenir votre position. Assurez-vous d\'avoir activé la géolocalisation.');
