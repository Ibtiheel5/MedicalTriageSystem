            function updateDateTime() {
                const now = new Date();
                const options = {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit'
                };
                document.getElementById('currentDateTime').textContent =
                    now.toLocaleDateString('fr-FR', options);
            }
            setInterval(updateDateTime, 1000);
            updateDateTime();

            // Simulation des patients en attente
            function updateWaitingPatients() {
                const min = 8;
                const max = 25;
                const count = Math.floor(Math.random() * (max - min + 1)) + min;
                $('#waitingPatients strong').text(count);

                // Mise à jour du niveau d'alerte
                const badge = $('#currentTriageLevel .badge');
                if (count < 10) {
                    badge.removeClass('bg-warning bg-danger').addClass('bg-success').text('Normal');
                } else if (count < 18) {
                    badge.removeClass('bg-success bg-danger').addClass('bg-warning').text('Modéré');
                } else {
                    badge.removeClass('bg-success bg-warning').addClass('bg-danger').text('Élevé');
                }
            }
            setInterval(updateWaitingPatients, 15000);
            updateWaitingPatients();

