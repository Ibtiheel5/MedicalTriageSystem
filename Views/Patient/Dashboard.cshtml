@{
    ViewData["Title"] = "Redirection Tableau de Bord";
}

<div class="container text-center py-5">
    <div class="spinner-border text-primary mb-3" role="status">
        <span class="visually-hidden">Chargement...</span>
    </div>
    <h4>Redirection vers votre tableau de bord...</h4>
    <p class="text-muted">Vous serez redirigé dans quelques secondes.</p>
</div>

@section Scripts {
    <script>
        // Redirection automatique après 1 seconde
        setTimeout(function() {
            window.location.href = '/PatientDashboard/Dashboard';
        }, 1000);
    </script>
}