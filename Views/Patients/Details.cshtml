@model MedicalTriageSystem.Models.Patient

@{
    ViewData["Title"] = "Détails du Patient";

    // Gérer les cas nuls
    var symptoms = Model.Symptoms ?? new List<MedicalTriageSystem.Models.Symptom>();
    var triageResult = Model.TriageResult;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 fw-bold text-primary">
            <i class="bi bi-person-circle me-2"></i>Détails du Patient
        </h1>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Retour
            </a>
            <button onclick="window.print()" class="btn btn-outline-primary ms-2">
                <i class="bi bi-printer me-1"></i>Imprimer
            </button>
        </div>
    </div>

    <div class="row">
        <!-- Informations du patient -->
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Informations Personnelles</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Nom complet:</div>
                        <div class="col-sm-8">@Model.Name</div>
                    </div>
                    <hr class="my-2">
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Âge:</div>
                        <div class="col-sm-8">@Model.Age ans</div>
                    </div>
                    <hr class="my-2">
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Genre:</div>
                        <div class="col-sm-8">
                            @switch (Model.Gender)
                            {
                                case "M":
                                    <span class="badge bg-info">Masculin</span>
                                    break;
                                case "F":
                                    <span class="badge bg-purple">Féminin</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@Model.Gender</span>
                                    break;
                            }
                        </div>
                    </div>
                    <hr class="my-2">
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <div class="row">
                            <div class="col-sm-4 fw-bold">Email:</div>
                            <div class="col-sm-8">
                                <a href="mailto:@Model.Email">@Model.Email</a>
                            </div>
                        </div>
                        <hr class="my-2">
                    }
                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <div class="row">
                            <div class="col-sm-4 fw-bold">Téléphone:</div>
                            <div class="col-sm-8">
                                <a href="tel:@Model.Phone">@Model.Phone</a>
                            </div>
                        </div>
                        <hr class="my-2">
                    }
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Date d'inscription:</div>
                        <div class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Résultat du triage -->
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-clipboard2-pulse me-2"></i>Résultat du Triage</h5>
                </div>
                <div class="card-body">
                    @if (triageResult != null)
                    {
                        var levelClass = triageResult.Level switch
                        {
                            "Urgent" => "danger",
                            "Élevé" => "warning",
                            "Normal" => "info",
                            "Faible" => "success",
                            _ => "secondary"
                        };

                        <div class="alert alert-@levelClass">
                            <h5 class="alert-heading">Niveau: @triageResult.Level</h5>
                            <p>@triageResult.Recommendation</p>
                            <hr>
                            <p class="mb-0">Score: <strong>@triageResult.Score / 100</strong></p>
                            <p class="mb-0">Date: @triageResult.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>

                        @if (triageResult.Doctor != null)
                        {
                            <div class="mt-3 p-3 bg-light rounded">
                                <h6><i class="bi bi-person-badge me-2"></i>Médecin assigné</h6>
                                <p class="mb-1"><strong>@triageResult.Doctor.Name</strong></p>
                                <p class="mb-1 text-muted">@triageResult.Doctor.Specialty</p>
                                <p class="mb-0">
                                    <i class="bi bi-telephone me-1"></i>
                                    @triageResult.Doctor.Phone
                                </p>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Aucun résultat de triage disponible pour ce patient.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Symptômes -->
    @if (symptoms != null && symptoms.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-heart-pulse me-2"></i>Symptômes Signalés</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @foreach (var symptom in symptoms)
                            {
                                <div class="col-md-6">
                                    <div class="card border">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <h6 class="mb-0">@symptom.Name</h6>
                                                <span class="badge @(symptom.Category == "Urgent" ? "bg-danger" : symptom.Category == "Normal" ? "bg-warning text-dark" : "bg-info")">
                                                    @symptom.Category
                                                </span>
                                            </div>
                                            @if (!string.IsNullOrEmpty(symptom.Description))
                                            {
                                                <p class="text-muted small mt-2 mb-3">@symptom.Description</p>
                                            }
                                            <div class="mt-2">
                                                <div class="d-flex justify-content-between">
                                                    <span>Sévérité:</span>
                                                    <span class="fw-bold">@symptom.Severity / 10</span>
                                                </div>
                                                <div class="progress mt-1" style="height: 8px;">
                                                    <div class="progress-bar @(symptom.Severity >= 7 ? "bg-danger" : symptom.Severity >= 4 ? "bg-warning" : "bg-info")"
                                                         style="width: @(symptom.Severity * 10)%"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .bg-purple {
            background-color: #6f42c1 !important;
        }
    </style>
}