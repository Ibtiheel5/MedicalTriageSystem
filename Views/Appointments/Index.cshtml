@model IEnumerable<MedicalTriageSystem.Models.Appointment>

@{
    ViewData["Title"] = "Gestion des Rendez-vous";
    Layout = "_Layout"; // Utilise votre layout de dashboard
}

<div class="container-fluid fw-normal">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0 text-gray-800"><i class="fas fa-calendar-alt me-2 text-primary"></i>Liste des Rendez-vous</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50 me-1"></i> Nouveau Rendez-vous
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover datatable">
                    <thead class="table-light">
                        <tr>
                            <th>Date & Heure</th>
                            <th>Patient</th>
                            @if (User.IsInRole("Admin"))
                            {
                                <th>Médecin</th>
                            }
                            <th>Motif</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Date.ToShortDateString()</td>
                                <td>@(item.Patient?.Name ?? "N/A")</td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td>@(item.Doctor?.Name ?? "Non assigné")</td>
                                }
                                <td>@item.Reason</td>
                                <td><span class="badge">@item.Status</span></td>
                                <td>...</td>
                            </tr>
                        }
                    </tbody>
                </table>
                            <th>Médecin</th>
                            <th>Motif</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.Date.ToShortDateString()</strong><br />
                                    <small class="text-muted">@item.StartTime?.ToString(@"hh\:mm")</small>
                                </td>
                                <td>@(item.Patient?.Name ?? "N/A")</td>
                                <td>@(item.Doctor?.Name ?? "Non assigné")</td>
                                <td>@item.Reason</td>
                                <td>
                                    <span class="badge @(item.Status == "Scheduled" ? "bg-info" : item.Status == "Completed" ? "bg-success" : "bg-secondary")">
                                        @item.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (User.IsInRole("Doctor"))
                                        {
                                            <a asp-controller="DoctorDashboard" asp-action="Consultation" asp-route-id="@item.Id" class="btn btn-success" title="Démarrer consultation">
                                                <i class="fas fa- stethoscope"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Votre Layout contient déjà l'initialisation DataTables via la classe .datatable
        });
    </script>
}