@model MedicalTriageSystem.Models.Appointment

@{
    ViewData["Title"] = "Détails du Rendez-vous";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="medical-card shadow-lg border-0">
                <div class="medical-gradient p-4 text-white rounded-top" style="background: linear-gradient(135deg, #007bff 0%, #00d4ff 100%);">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0"><i class="fas fa-calendar-check me-3"></i>Fiche de Rendez-vous</h3>
                        <span class="badge bg-white text-primary rounded-pill px-3">ID #@Model.Id</span>
                    </div>
                </div>

                <div class="card-body p-5 bg-white shadow-sm">
                    <div class="row g-4">
                        <div class="col-md-6 border-end">
                            <h6 class="text-muted text-uppercase small fw-bold mb-3">Information Patient</h6>
                            <h5 class="fw-bold text-dark">@Model.Patient?.Name</h5>
                            <p class="text-muted mb-0"><i class="fas fa-envelope me-2"></i>@Model.Patient?.Email</p>
                        </div>

                        <div class="col-md-6 ps-md-4">
                            <h6 class="text-muted text-uppercase small fw-bold mb-3">Médecin Référent</h6>
                            <h5 class="fw-bold text-dark">Dr. @Model.Doctor?.Name</h5>
                            <p class="text-primary mb-0"><i class="fas fa-stethoscope me-2"></i>@Model.Doctor?.Specialty</p>
                        </div>

                        <hr class="my-4" />

                        <div class="col-12">
                            <div class="bg-light p-4 rounded-3 d-flex justify-content-around text-center">
                                <div>
                                    <p class="text-muted mb-1 small">DATE DU RDV</p>
                                    <h5 class="fw-bold text-dark">
                                        <i class="far fa-calendar-alt me-2 text-primary"></i>
                                        @Model.Date.ToString("dd MMMM yyyy")
                                    </h5>
                                </div>
                                <div class="border-start ps-4">
                                    <p class="text-muted mb-1 small">CRÉNEAU HORAIRE</p>
                                    <h5 class="fw-bold text-dark">
                                        <i class="far fa-clock me-2 text-primary"></i>
                                        @* CORRECTION ICI : Utilisation de l'échappement pour TimeSpan *@
                                        @Model.Date.ToString("dd MMMM yyyy")
                                    </h5>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 mt-4">
                            <h6 class="text-muted text-uppercase small fw-bold mb-2">Motif de consultation</h6>
                            <div class="p-3 border rounded-3 bg-white italic text-secondary">
                                "@(string.IsNullOrEmpty(Model.Reason) ? "Aucun motif spécifié par le patient." : Model.Reason)"
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light p-3 text-center border-0">
                    <small class="text-muted">Enregistré le @Model.CreatedAt.ToString("dd/MM/yyyy à HH:mm")</small>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-center gap-3">
                <a asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">
                    <i class="fas fa-list me-2"></i>Mes Rendez-vous
                </a>
                <button onclick="window.print()" class="btn btn-light rounded-pill px-4 shadow-sm border">
                    <i class="fas fa-print me-2"></i>Imprimer
                </button>
            </div>
        </div>
    </div>
</div>