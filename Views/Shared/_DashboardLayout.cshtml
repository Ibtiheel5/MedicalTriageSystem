﻿
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dashboard Triage Médical</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- FullCalendar -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css">

    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">

    <!-- CSS personnalisé -->
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="dashboard-layout">
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <a href="/Home/Dashboard" class="sidebar-brand">
                <i class="fas fa-heartbeat me-2"></i> Triage Médical
            </a>
        </div>
        <ul class="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link active" href="/Home/Dashboard">
                    <i class="fas fa-tachometer-alt me-2"></i> Tableau de Bord
                </a>
            </li>

            <!-- Menus visibles SEULEMENT pour Admin et Doctor -->
            @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
            {
                <li class="nav-item">
                    <a class="nav-link" href="/Patients/Index">
                        <i class="fas fa-users me-2"></i> Patients
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Doctors/Index">
                        <i class="fas fa-user-md me-2"></i> Médecins
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/TriageResults/Index">
                        <i class="fas fa-stethoscope me-2"></i> Résultats Triage
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Appointments/Index">
                        <i class="fas fa-calendar-check me-2"></i> Rendez-vous
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Notifications/Index">
                        <i class="fas fa-bell me-2"></i> Notifications
                    </a>
                </li>
            }

            <!-- Menus visibles SEULEMENT pour les Patients -->
            @if (User.IsInRole("Patient"))
            {
                <li class="nav-item">
                    <a class="nav-link" href="/Triage/Quick">
                        <i class="bi bi-lightning-charge me-2"></i> Triage Rapide
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Triage/Index">
                        <i class="bi bi-file-medical me-2"></i> Triage Complet
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Appointments/Create">
                        <i class="bi bi-calendar-plus me-2"></i> Prendre Rendez-vous
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Symptoms">
                        <i class="bi bi-activity me-2"></i> Mes Symptômes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/AvailableDoctors">
                        <i class="fas fa-user-md me-2"></i> Médecins Disponibles
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/MyTriageResults">
                        <i class="fas fa-stethoscope me-2"></i> Mes Résultats de Triage
                    </a>
                </li>
            }

            <!-- Déconnexion pour tout le monde -->
            <li class="nav-item mt-auto">
                <a class="nav-link text-danger" href="/Auth/Logout">
                    <i class="fas fa-sign-out-alt me-2"></i> Déconnexion
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Navigation -->
        <nav class="top-nav">
            <div class="nav-left">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Rechercher..." id="globalSearch">
                </div>
            </div>

            <div class="nav-right">
                <!-- Notifications -->
                <div class="nav-item dropdown">
                    <button class="nav-link dropdown-toggle" data-bs-toggle="dropdown" id="notificationsDropdown">
                        <i class="fas fa-bell"></i>
                        <span class="badge bg-danger" id="notificationCount">0</span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationsDropdown">
                        <div class="dropdown-header">
                            <h6>Notifications</h6>
                            <a href="#" class="text-primary small" id="markAllRead">Tout marquer comme lu</a>
                        </div>
                        <div class="dropdown-body" id="notificationList">
                            <!-- Notifications loaded via AJAX -->
                            <div class="notification-item">
                                <div class="notification-icon">
                                    <i class="fas fa-user-injured text-danger"></i>
                                </div>
                                <div class="notification-content">
                                    <p class="mb-0">Nouveau patient urgent</p>
                                    <small class="text-muted">2 minutes ago</small>
                                </div>
                            </div>
                        </div>
                        <div class="dropdown-footer">
                            <a href="/Notifications" class="btn btn-sm btn-outline-primary w-100">Voir toutes</a>
                        </div>
                    </div>
                </div>

                <!-- Messages -->
                <div class="nav-item dropdown">
                    <button class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="fas fa-envelope"></i>
                        <span class="badge bg-info">3</span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end">
                        <!-- Messages content -->
                    </div>
                </div>

                <!-- User Menu -->
                <div class="nav-item dropdown">
                    <button class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                        <div class="user-avatar">
                            <i class="fas fa-user"></i>
                        </div>
                        <span>@User.Identity?.Name</span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end">
                        <a class="dropdown-item" href="/Account/Profile">
                            <i class="fas fa-user me-2"></i>Profil
                        </a>
                        <a class="dropdown-item" href="/Account/Settings">
                            <i class="fas fa-cog me-2"></i>Paramètres
                        </a>
                        <div class="dropdown-divider"></div>
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="dropdown-item">
                                <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="nav-item">
                    <div class="dropdown">
                        <button class="btn btn-primary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fas fa-plus"></i> Actions rapides
                        </button>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item" href="/Triage/Create">
                                <i class="fas fa-plus-circle me-2"></i>Nouveau triage
                            </a>
                            <a class="dropdown-item" href="/Patients/Create">
                                <i class="fas fa-user-plus me-2"></i>Nouveau patient
                            </a>
                            <a class="dropdown-item" href="/Appointments/Create">
                                <i class="fas fa-calendar-plus me-2"></i>Nouveau RDV
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content Area -->
        <main class="content-wrapper">
            <!-- Page Header -->
            <div class="page-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h1 class="page-title">@ViewData["Title"]</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
                                @if (!string.IsNullOrEmpty(ViewData["ParentPage"] as string))
                                {
                                    <li class="breadcrumb-item">@ViewData["ParentPage"]</li>
                                }
                                <li class="breadcrumb-item active">@ViewData["Title"]</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-auto">
                        @if (!string.IsNullOrEmpty(ViewData["ActionButton"] as string))
                        {
                            <a href="@ViewData["ActionButtonLink"]" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>@ViewData["ActionButton"]
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Content -->
            <div class="container-fluid">
                @RenderBody()
            </div>
        </main>

        <!-- Footer -->
        <footer class="footer">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <span class="text-muted">© 2024 Système Triage Médical v2.0</span>
                    </div>
                    <div class="col-md-6 text-end">
                        <span class="text-muted" id="serverTime">
                            <i class="fas fa-clock me-1"></i>
                            <span id="currentTime"></span>
                        </span>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <!-- FullCalendar -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/locales/fr.js"></script>

    <!-- SignalR -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>

    <!-- JavaScript personnalisé -->
    <script src="~/js/dashboard.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>