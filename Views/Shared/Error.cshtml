@{
    ViewData["Title"] = "Erreur";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Erreur
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4 class="alert-heading">Une erreur est survenue</h4>
                        <p>@TempData["ErrorMessage"]</p>
                        <hr>
                        <p class="mb-0">
                            Veuillez réessayer ou contacter l'administrateur si le problème persiste.
                        </p>
                    </div>

                    <div class="text-center mt-4">
                        <a href="/Home" class="btn btn-primary me-2">
                            <i class="fas fa-home me-1"></i>Accueil
                        </a>
                        <a href="javascript:history.back()" class="btn btn-secondary me-2">
                            <i class="fas fa-arrow-left me-1"></i>Retour
                        </a>
                        <a href="/Auth/Login" class="btn btn-outline-primary">
                            <i class="fas fa-sign-in-alt me-1"></i>Se connecter
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>